<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext="com.mlmOK.MainActivity"
    android:padding="15dp">

    <Button
        android:id="@+id/btn_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView 使用" />

    <Button
        android:id="@+id/recycle_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView复用测试"/>

    <Button
        android:id="@+id/btn_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bitmap绘制" />

    <Button
        android:id="@+id/btn_fluctuate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="波动矩形" />
    <Button
        android:id="@+id/btn_arc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弧形布局" />
    <Button
        android:id="@+id/btn_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底部Dialog" />

</LinearLayout>
